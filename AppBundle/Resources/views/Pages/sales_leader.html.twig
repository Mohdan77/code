{% extends '@PostroykaApp/base.html.twig' %}

{% block title %}
    {{ page.title }}
{% endblock %}


{% block content %}
    <div class="products_blk">
        <div class="_catalog {% if 'list' != view %}mini_catalog{% endif %}">
            <div class="_row">
                {% for product in products %}
                    {{ include('@PostroykaApp/Pages/_product_item.html.twig', {'list': 'Лидер продаж', 'position': loop.index}) }}
                {% else %}
                    <div class="col_">
                        <div class="confirm_blk">
                            <span class="_ico-warning"></span>
                            Товары не найдены
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {{ include('@PostroykaApp/Pages/_block-of-reviews.html.twig') }}
{% endblock %}

{% block gtm_header %}
    {{ parent()  }}

    {{ include('@PostroykaApp/_gtm_impressions.html.twig', {'products': products, 'list': 'Лидер продаж'}) }}
{% endblock %}