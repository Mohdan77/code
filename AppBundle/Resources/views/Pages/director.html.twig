{% extends '@PostroykaApp/base.html.twig' %}

{% block title %}
    {{ page.title }}
{% endblock %}


{% block content %}
    <div class="_blk">
        {{ page.body|raw }}
    </div>

    <div class="feedback_blk" id="director">
        {{ form_start(form) }}

        <div class="_form-fieldset">
            {% if place|default %}
                {{ form_row(form.name, {'attr': {'placeholder': place}}) }}
                {% else %}
                {{ form_row(form.name) }}
            {% endif %}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.message) }}
            {{ form_row(form.recaptcha) }}

            <div class="fl_upld">
                <div class="empty  three"></div>
                <label><input id="fl_inp1" type="file" name="file">Прикрепите файл</label>
                <div id="fl_nm1">Файл не выбран</div>
            </div>
        </div>
        <div class="control-submit">
            <button class="orange_btn">Отправить</button>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}
